##########################################
##########################################
## Unit test overrides
##########################################
##########################################

# This file overrides the top-most EditorConfig file.
root = false

[*.{cs,csx}]

# CA1034: Nested types should not be visible.
dotnet_diagnostic.CA1034.severity = none
# CA1303: Do not pass literals as localized parameters.
dotnet_diagnostic.CA1303.severity = none
# CA1062: Validate arguments of public methods.
dotnet_diagnostic.CA1062.severity = none
# CA1707: Identifiers should not contain underscores.
dotnet_diagnostic.CA1707.severity = none
# CA1812: Avoid uninstantiated internal classes.
dotnet_diagnostic.CA1812.severity = none
# CA1822: Mark members as static.
dotnet_diagnostic.CA1822.severity = none
# CA1848: Use the LoggerMessage delegates.
dotnet_diagnostic.CA1848.severity = none
# CA1852: Seal internal types.
dotnet_diagnostic.CA1852.severity = none
# CA1859: Use concrete types when possible for improved performance.
dotnet_diagnostic.CA1859.severity = none
# CA1861: Avoid constant arrays as arguments.
dotnet_diagnostic.CA1861.severity = none
# CA1869: Cache and reuse 'JsonSerializerOptions' instances.
dotnet_diagnostic.CA1869.severity = none
# CA2000: Dispose objects before losing scope.
dotnet_diagnostic.CA2000.severity = none
# CA2201: Do not raise reserved exception types.
dotnet_diagnostic.CA2201.severity = none
# CA2254: (logging) Template should be a static expression.
dotnet_diagnostic.CA2254.severity = none

# IDE0007: Use 'var' instead of explicit type.
# Why?: Not smart enough for fakes/mocks/fixtures.
dotnet_diagnostic.IDE0007.severity = none
csharp_style_var_elsewhere = true
# IDE0017: Use object initializers.
# Why?: Gets in the way of structuring tests in Arrange/Act/Assert groups.
dotnet_diagnostic.IDE0017.severity = none
# IDE0028: Simplify collection initialization.
dotnet_diagnostic.IDE0028.severity = none
# IDE0039: Use local function.
dotnet_diagnostic.IDE0039.severity = none

# SA1122: The C# code includes an empty string, written as "".
dotnet_diagnostic.SA1122.severity = none
# SA1201: Elements should appear in the correct order.
dotnet_diagnostic.SA1201.severity = none

# S1144: Unused private types or members should be removed.
dotnet_diagnostic.S1144.severity = none
# S1215: "GC.Collect" should not be called.
dotnet_diagnostic.S1215.severity = none
# S2094: Classes should not be empty.
dotnet_diagnostic.S2094.severity = none
# S2325: Methods and properties that don't access instance data should be static.
dotnet_diagnostic.S2325.severity = none
# S3459: Unassigned members should be removed.
dotnet_diagnostic.S3459.severity = none
